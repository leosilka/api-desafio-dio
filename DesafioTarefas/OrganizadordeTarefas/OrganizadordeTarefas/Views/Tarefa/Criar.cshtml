@model OrganizadordeTarefas.Models.Tarefa
@using OrganizadordeTarefas.Models

@{
    ViewData["Title"] = "Criar nova tarefa";
}

<h1>Criar nova tarefa</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control datetimepicker" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<OrganizadordeTarefas.Models.EnumStatusTarefa>()" class="form-control">
                    <option value="">Selecione um status</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Voltar</a>
</div>