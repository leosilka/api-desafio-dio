@model IEnumerable<OrganizadordeTarefas.Models.Tarefa>

@{
    ViewData["Title"] = "Listagem de Tarefas";
}

<h2>Tarefas</h2>

<p>
    <a asp-action="Criar" class="btn btn-outline-success">Criar Tarefa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Status)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Atualizar" asp-route-id="@item.Id" class="btn btn-outline-warning">Atualizar</a>
                        <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-outline-success">Detalhes</a>
                        <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>